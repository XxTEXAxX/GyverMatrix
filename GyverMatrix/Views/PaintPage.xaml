<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="Black"
             Title="Рисование"
             x:Class="GyverMatrix.Views.PaintPage"
             x:Name="Page">
    <ContentPage.Content>
        <StackLayout Spacing="10">
            <Rectangle HeightRequest="600"
                       WidthRequest="100"
                       Fill="Green">
                <Rectangle.GestureRecognizers>
                    <PanGestureRecognizer PanUpdated="PanGestureRecognizer_OnPanUpdated" TouchPoints="{Binding Touch, Source={x:Reference Page}}"/>
                </Rectangle.GestureRecognizers>
            </Rectangle>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>