<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="Black"
             Title="О приложении"
             x:Class="GyverMatrix.Views.InfoPage">
    <ContentPage.Content>
        <StackLayout Padding="10"
                     Spacing="10">

            <Label Text="GyverMatrix (Xamarin Edition)"
                   FontSize="Title"
                   HorizontalOptions="CenterAndExpand" />
            <Label Text="Разработчики:"
                   HorizontalOptions="StartAndExpand" />
            <Label Text="Медведев Дмитрий (aka Texa)"
                   HorizontalOptions="StartAndExpand" />
            <Label Text="Дмитрий Сорокин (DIMANRUS)"
                   HorizontalOptions="StartAndExpand" />
            <StackLayout Spacing="2">
                <Label Text="Версия приложения:"
                       HorizontalOptions="StartAndExpand" />
                <Label Text="10.01.22.01"
                       HorizontalOptions="StartAndExpand" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>