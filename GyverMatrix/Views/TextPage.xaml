<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="Black"
             Title="Бегущая строка"
             x:Class="GyverMatrix.Views.TextPage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand"
                     Padding="8">
            <Entry x:Name="Text"
                   Placeholder="Текст бегущей строки" />
            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="CenterAndExpand">
                <Button x:Name="Send"
                        Text="Отправить"
                        Clicked="Send_Clicked" />
                <Button x:Name="Start"
                        Text="Пуск"
                        Clicked="Start_Clicked" />
                <Button x:Name="Stop"
                        Text="Стоп"
                        Clicked="Stop_Clicked" />
            </StackLayout>
            <Picker x:Name="Color"
                    Title="Заливка:"
                    HorizontalOptions="FillAndExpand">
                <Picker.Items>
                    <x:String>Вся строка одним цветом</x:String>
                    <x:String>Радуга вдоль текста</x:String>
                    <x:String>Каждая буква своим цветом</x:String>
                </Picker.Items>
            </Picker>
            <StackLayout Orientation="Horizontal">
                <Label Text="Скорость" />
                <Slider x:Name="SpeedSlider"
                        HorizontalOptions="FillAndExpand"
                        Maximum="255"
                        Minimum="10"
                        ValueChanged="SpeedSlider_ValueChanged" />
                <Label  x:Name="SpeedText"
                        Text="0" 
                        WidthRequest="30"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Яркость" />
                <Slider x:Name="BrightnessSlider"
                        HorizontalOptions="FillAndExpand"
                        Maximum="255"
                        Minimum="10"
                        ValueChanged="BrightnessSlider_ValueChanged" />
                <Label  x:Name="BrightnessText"
                        Text="0" 
                        WidthRequest="30"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>